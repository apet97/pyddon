  "settings": {
    "type": "STRUCTURED",
    "fields": [
      {
        "key": "developer_mode",
        "name": "Developer Mode",
        "description": "Use developer API endpoints instead of production",
        "type": "BOOLEAN",
        "defaultValue": false,
        "required": false
      },
      {
        "key": "forwarding_url",
        "name": "Forwarding URL",
        "description": "Forward webhook events to this URL (optional)",
        "type": "STRING",
        "required": false
      },
      {
        "key": "auto_bootstrap",
        "name": "Auto Bootstrap",
        "description": "Automatically fetch workspace data on install",
        "type": "BOOLEAN",
        "defaultValue": true,
        "required": false
      },
      {
        "key": "logging_level",
        "name": "Logging Level",
        "description": "Set logging verbosity",
        "type": "SELECT",
        "options": [
          {"label": "DEBUG", "value": "DEBUG"},
          {"label": "INFO", "value": "INFO"},
          {"label": "WARNING", "value": "WARNING"},
          {"label": "ERROR", "value": "ERROR"}
        ],
        "defaultValue": "INFO",
        "required": false
