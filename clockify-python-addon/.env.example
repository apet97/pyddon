# Server Configuration
BASE_URL=https://your-addon-domain.com
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Database
DATABASE_URL=sqlite+aiosqlite:///./clockify_addon.db

# Security
JWT_SECRET=your-jwt-secret-here
CLOCKIFY_JWKS_URL=https://developer.clockify.me/.well-known/jwks.json
REQUIRE_SIGNATURE_VERIFICATION=true

# Clockify API
CLOCKIFY_API_BASE=https://api.clockify.me/api/v1
CLOCKIFY_DEVELOPER_API_BASE=https://developer.clockify.me/api/v1
CLOCKIFY_PTO_API_BASE=https://pto.api.clockify.me/v1
CLOCKIFY_REPORTS_API_BASE=https://reports.api.clockify.me/v1

# Rate Limiting
RATE_LIMIT_RPS=50
RATE_LIMIT_ENABLED=true

# Redis (optional - for distributed rate limiting)
REDIS_URL=redis://localhost:6379/0
USE_REDIS=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Bootstrap
AUTO_BOOTSTRAP_ON_INSTALL=true
BOOTSTRAP_BATCH_SIZE=10
BOOTSTRAP_MAX_RETRIES=3
BOOTSTRAP_MAX_PAGES=1000

# Webhook HTTP Retries
WEBHOOK_REQUEST_MAX_RETRIES=5
WEBHOOK_REQUEST_BACKOFF_BASE=0.5
WEBHOOK_REQUEST_BACKOFF_CAP=5.0

# Addon Info
ADDON_KEY=clockify-python-addon
ADDON_NAME=Clockify Python Addon Boilerplate
ADDON_DESCRIPTION=Production-ready Clockify Add-on with full API integration and webhook support
ADDON_VENDOR_NAME=Your Company
ADDON_VENDOR_URL=https://your-company.com
